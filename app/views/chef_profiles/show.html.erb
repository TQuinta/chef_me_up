<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div class="profile-page">
        <h1>Chef <%= @profile.title %></h1>
        <div class="category">
          <p><%= @profile.category %> Cuisine</p>
        </div>
        <img src="https://media.istockphoto.com/photos/chef-presenting-a-plate-of-food-picture-id1369920192" alt="">
        <div class="text-box">
          <p><%= @profile.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <div class="form-box">
        <div class="small-form">
        <h2>Make a new booking</h2>
          <%= simple_form_for [@profile, @booking] do |f| %>
          <!-- <%= f.input :date %> -->
          <%= f.input :date, collection: (Date.today+1)..(Date.today+90) %>
          <%= f.input :duration %>
          <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
